rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /__tests/{document=**} {
      allow read, write;
    }

    match /todos/{todoId} {
      allow read, write;
    }
    match /tweets/{todoId} {
      allow read, write;
    }
    match /users/{todoId} {
      allow read: if request.auth.uid != null;
      allow write: if false;
    }
    match /configs/jORwjIykFo2NmkdzTkhU {
      allow read, write;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
